<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ZoomPostFragment"
    android:padding="5dp">


    <!-- Affichage du message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/zoomedImgUser"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="@string/app_name"
                        app:layout_constraintBottom_toTopOf="@+id/zoomedTextPost"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/ic_launcher_round"
                        tools:ignore="ImageContrastCheck" />

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="35dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/zoomedTextPost"
                        app:layout_constraintEnd_toStartOf="@+id/zoomedTag"
                        app:layout_constraintStart_toEndOf="@+id/zoomedImgUser"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/zoomedUser"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:background="@drawable/rounded_background"
                                android:gravity="center"
                                android:text="TextView"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="HardcodedText,MissingConstraints" />

                            <TextView
                                android:id="@+id/zoomedRole"
                                android:layout_width="151dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/rounded_background"
                                android:gravity="center"
                                android:text="TextView"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/zoomedUser"
                                tools:ignore="HardcodedText,MissingConstraints" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/zoomedTextPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/zoomedTag"
                        android:layout_width="100dp"
                        android:layout_height="66dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="TextView"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText,TextSizeCheck" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/zoomedLikes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_background"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/zoomedImgPost"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
                tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck" />

            <ImageView
                android:id="@+id/zoomedImgPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/zoomedComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:text="TextView"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/zoomedImgPost"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>